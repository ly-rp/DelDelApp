<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Recipe Table</title>
  <style>
    table {
      width: 100%;
      border-collapse: collapse;
    }
    td, th {
      padding: 10px;
      border: 1px solid #ddd;
    }
    .edit-btn {
      background-color: orange;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }
    .delete-btn {
      background-color: crimson;
      color: white;
      border: none;
      padding: 5px 10px;
      cursor: pointer;
    }
  </style>
</head>
<body>

<table id="recipeTable">
  <thead>
    <tr>
      <th>#</th>
      <th>Recipe Name</th>
      <th>Category</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>1</td>
      <td contenteditable="false">Chocolate Cake</td>
      <td contenteditable="false">Desserts</td>
      <td>
        <button class="edit-btn" onclick="editRow(this)">Edit</button>
        <button class="delete-btn" onclick="deleteRow(this)">Delete</button>
      </td>
    </tr>
    <!-- Add more rows as needed -->
  </tbody>
</table>

<script>
  function editRow(button) {
    const row = button.closest("tr");
    const cells = row.querySelectorAll("td");

    if (button.textContent === "Edit") {
      // Make editable except the first (index) and last (actions) columns
      cells[1].contentEditable = true;
      cells[2].contentEditable = true;
      button.textContent = "Save";
    } else {
      cells[1].contentEditable = false;
      cells[2].contentEditable = false;
      button.textContent = "Edit";
      // You can also send updated data to the server here (e.g. via fetch/AJAX)
    }
  }

  function deleteRow(button) {
    const row = button.closest("tr");
    row.remove();
    // You can also send a delete request to the server here
  }
</script>

</body>
</html>
