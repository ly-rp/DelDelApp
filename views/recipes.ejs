<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/customStyling.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipes</title>
    <style>
        .card-img-top {
            height: 320px;
            object-fit: cover;
        }
    </style>
</head>

<body>

    <!-- Include dynamic navbar (with guest logic) -->
    <%- include('partials/navbar') %>

        <div class="container mt-4">
            <div class="row">
                <% recipes.forEach(recipe=> { %>
                    <div class="col-md-3 mb-4">
                        <div class="card" style="background-color: #fffaec; border-radius: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); max-width: 1000px;">
                            <a href="/recipe/<%= recipe.recipeId %>">
                                <img src="/images/recipeImages/<%= recipe.recipeImage %>" class="card-img-top" alt="<%= recipe.recipeTitle %>">
                            </a>
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title" style="color: #801408">
                                        <a href="/recipe/<%= recipe.recipeId %>" style="text-decoration: none; color: inherit;">
                                            <%= recipe.recipeTitle %>
                                        </a>
                                    </h5>

                                    <a href="/favourite/<%= recipe.recipeId %>" style="text-decoration: none;">❤️</a>
                                </div>
                                <a href="/rate/<%= recipe.id %>" class="btn btn-orange3 btn-sm">Rate</a>
                                <a href="/review/<%= recipe.id %>" class="btn btn-yellow2 btn-sm">Review</a>
                                <a href="/favourite/<%= recipe.id %>" class="btn btn-pink2 btn-sm">❤️</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>
</body>
</html>