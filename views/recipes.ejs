<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/customStyling.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipes</title>
    <style>
        .card-img-top {
            height: 320px;
            object-fit: cover;
        }
    </style>
</head>

<body>

    <!-- Include dynamic navbar (with guest logic) -->
    <%- include('partials/navbar') %>
        <div class="container mt-4">
            <div class="row">
                <% recipes.forEach(recipe=> { %>
                    <div class="col-md-3 mb-4">
                        <div class="card">
                            <img src="/images/recipeImages/<%= recipe.recipeImage %>" class="card-img-top"
                                alt="Recipe Image">
                            <div class="card-body">
                                <div class="d-flex justify-content-between">
                                    <h5 class="card-title">
                                        <%= recipe.recipeTitle %>
                                    </h5>
                                    <a href="/favourite/<%= recipe.id %>" style="text-decoration: none;">ðŸ’—</a>
                                </div>
                                <p class="card-text">
                                    <%= recipe.recipeDescription || 'No description provided.' %>
                                </p>
                                <a href="/rate/<%= recipe.id %>" class="btn btn-red1">Rate</a>
                                <a href="/review/<%= recipe.id %>" class="btn btn-orange2">Review</a>
                                <a href="/favourite/<%= recipe.id %>" class="btn btn-pink">ðŸ’—</a>
                            </div>
                        </div>
                    </div>
                    <% }); %>
            </div>
        </div>

        <div class="container mt-5">
            <h2>Recipes</h2>
            <a href="/">Back to Welcome</a>
        </div>
</body>
</html>