<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/customStyling.css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Recipes</title>
</head>

<body>
    <!-- Navbar -->
    <%- include('partials/navbar', { user: user }) %>

    <!-- Main Content -->
    <div class="container mt-4">
        <h1 class="text-center mb-4 my-3" style="color: #801408">Recipes</h1>
        <div class="row">
            <% recipes.forEach(recipe => { %>
                <div class="col-md-3 mb-4">
                    <div class="card"
                        style="background-color: #fffaec; border-radius: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); max-width: 1000px;">
                        
                        <a href="/recipe/<%= recipe.recipeId %>">
                            <img src="/images/recipeImages/<%= recipe.recipeImage %>" class="card-img-top"
                                alt="<%= recipe.recipeTitle %>" />
                        </a>

                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <h5 class="card-title" style="color: #801408">
                                    <a href="/recipe/<%= recipe.recipeId %>" style="text-decoration: none; color: inherit;">
                                        <%= recipe.recipeTitle %>
                                    </a>
                                </h5>
                            </div>

                            <div class="d-flex gap-2 mt-2">
                                <% if (!user || user.role === 'guest') { %>
                                    <!-- Guests or no user: Review + login for favourite -->
                                    <a href="/review/<%= recipe.recipeId %>" class="btn btn-yellow2 btn-sm">Review</a>
                                    <a href="/login" class="btn btn-pink1 btn-sm" title="Login to Favourite">‚ù§Ô∏è</a>

                                <% } else { %>
                                    <!-- Logged in users -->
                                    <a href="/review/<%= recipe.recipeId %>" class="btn btn-yellow2 btn-sm">Review</a>

                                    <% if (recipe.isFavourited) { %>
                                        <!-- Show heartbreak button if already favourited -->
                                        <form action="/favourites/remove/<%= recipe.recipeId %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-pink1 btn-sm" title="Remove from favourites">üíî</button>
                                        </form>
                                    <% } else { %>
                                        <!-- Show heart button if not favourited -->
                                        <form action="/favourites/add/<%= recipe.recipeId %>" method="POST" style="display:inline;">
                                            <button type="submit" class="btn btn-pink1 btn-sm" title="Add to favourites">‚ù§Ô∏è</button>
                                        </form>
                                    <% } %>

                                    <% if (user.role === 'admin' || recipe.creatorId === user.id) { %>
                                        <!-- Show edit/delete only for admin or recipe owner -->
                                        <a href="/editRecipe/<%= recipe.recipeId %>" class="btn btn-warning btn-sm">Edit</a>
                                        <form action="/delete/<%= recipe.recipeId %>" method="POST" style="display:inline;">
                                            <button class="btn btn-danger btn-sm"
                                                onclick="return confirm('Are you sure you want to delete this recipe?')">
                                                Delete
                                            </button>
                                        </form>
                                    <% } %>
                                <% } %>
                            </div>
                        </div>
                    </div>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
