<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/customStyling.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>This the search bar...yay</title>
</head>

<%- include('partials/navbar') %>

<div class="container mt-4">
  <h2>Search Results for "<%= query %>"</h2>

  <% if (recipes.length > 0) { %>
    <div class="row">
      <% recipes.forEach(recipe => { %>
        <div class="col-md-4 mb-3">
          <div class="card">
            <img src="<%= recipe.recipImage %>" class="card-img-top" alt="<%= recipe.recipeTitle %>">
            <div class="card-body">
              <h5 class="card-title"><%= recipe.recipeTitle %></h5>
              <p class="card-text"><%= recipe.description.substring(0, 100) %>...</p>
              <a href="/recipe/<%= recipe.recipeId %>" class="btn btn-primary">View</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  <% } else { %>
    <p>No recipes are found.</p>
  <% } %>
</div>
