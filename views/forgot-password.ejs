<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/customStyling.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Forgot Password - DelDel</title>
</head>
<body>
  <!-- Navbar -->
  <%- include('partials/navbar') %>

  <!-- Main Container -->
  <div class="container mt-5">
    <h1 class="text-center">Forgot Your Password?</h1>

    <!-- Show Flash Errors -->
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger">
        <% errors.forEach(error => { %>
          <p><%= error %></p>
        <% }) %>
      </div>
    <% } %>

    <!-- Show Flash Success Messages -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <% messages.forEach(msg => { %>
          <p><%= msg %></p>
        <% }) %>
      </div>
    <% } %>

    <!-- Forgot Password Form -->
    <form action="/forgot-password" method="POST" class="mt-4 w-50 mx-auto">
      
      <!-- Email Input -->
      <div class="mb-3">
        <label for="email" class="form-label">Enter your registered Email address:</label>
        <input
          type="email"
          name="email"
          id="email"
          class="form-control"
          required
          placeholder="you@example.com"
        />
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
    </form>

    <!-- Back to Login Link -->
    <p class="text-center mt-4">
      Remembered your password? <a href="/login">Login here</a>
    </p>
  </div>
</body>
</html>
