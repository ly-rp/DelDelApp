<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/customStyling.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title><%= recipe.recipeTitle %> | DelDel</title>

  <style>
    .star-rating {
      direction: rtl;
      display: inline-flex;
      font-size: 2rem;
    }
    .star-rating input[type="radio"] {
      display: none;
    }
    .star-rating label {
      color: #ccc;
      cursor: pointer;
      transition: color 0.2s;
    }
    .star-rating input[type="radio"]:checked ~ label {
      color: gold;
    }
    .star-rating label:hover,
    .star-rating label:hover ~ label {
      color: gold;
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <%- include('partials/navbar', { user: user }) %>

  <div class="container mt-4">
    <div class="card p-4" style="background-color: #fffaec; border-radius: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
      <div class="row align-items-start">
        <!-- Left: Details -->
        <div class="col-md-6">
          <h1 class="mb-3" style="color: #801408;"><%= recipe.recipeTitle %></h1>

          <!-- Buttons: Review, Favourite, Edit/Delete -->
          <div class="mb-3 d-flex gap-2">
            <% if (user && user.role !== 'guest') { %>
              <a href="#review-form" class="btn btn-yellow2">Review</a>

              <% if (user.role === 'user') { %>
                <!-- Favourite toggle -->
                <% if (recipe.isFavourited) { %>
                  <form action="/favourites/remove/<%= recipe.recipeId %>" method="POST" style="display:inline;">
                    <button type="submit" class="btn btn-danger" title="Remove from favourites">‚ù§Ô∏è</button>
                  </form>
                <% } else { %>
                  <form action="/favourites/add" method="POST" style="display:inline;">
                    <input type="hidden" name="recipeId" value="<%= recipe.recipeId %>">
                    <button type="submit" class="btn btn-danger" title="Add to favourites">ü§ç</button>
                  </form>
                <% } %>
              <% } %>

              <% if (user.role === 'admin' || user.id === recipe.creatorId) { %>
                <!-- Admin/creator buttons -->
                <a href="/editRecipe/<%= recipe.recipeId %>" class="btn btn-warning">Edit</a>
                <a href="/deleteRecipe/<%= recipe.recipeId %>" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this recipe?');">Delete</a>
              <% } %>
            <% } else { %>
              <!-- Guest view -->
              <a href="/review/<%= recipe.recipeId %>" class="btn btn-yellow2">Review</a>
              <a href="/login" class="btn btn-pink2" title="Login to favourite">‚ù§Ô∏è</a>
            <% } %>
          </div>

            <div class="h5-red">
              <h5>Category:</h5>
              <p>
                <%= recipe.category %>
              </p>

              <h5>Description:</h5>
              <p>
                <%= recipe.recipeDescription %>
              </p>

              <h5>Ingredients:</h5>
              <p>
                <%= recipe.ingredients %>
              </p>

              <h5>Instructions:</h5>
              <p>
                <%= recipe.instructions %>
              </p>
            </div>
          </div>

          <!-- Right -->
          <div class="col-md-6">
            <img src="/images/recipeImages/<%= recipe.recipeImage %>" alt="<%= recipe.recipeTitle %>"
              style="width: 100%; height: 350px; object-fit: cover; border-radius: 10px;" />

            <div class="h5-red mt-4">
              <h5>Prep Time (Minutes):</h5>
              <p>
                <%= recipe.prep_time %>
              </p>

              <h5>Cook Time (Minutes):</h5>
              <p>
                <%= recipe.cook_time %>
              </p>

              <h5>Servings:</h5>
              <p>
                <%= recipe.servings %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>



<!-- Reviews Section -->
<div class="container mt-5">
  <h3>Reviews</h3>
  <% if (reviews && reviews.length > 0) { %>
    <ul class="list-unstyled">
      <% reviews.forEach(function(review) { %>
        <li class="mb-2">
          <strong><%= review.username %></strong>: <%= review.rating %>/5 - 
          <%= review.comment %>

          <% if (user && (user.role === 'admin' || user.id === review.userId)) { %>
            <a href="/reviews/edit/<%= review.reviewId %>" class="ms-3 text-secondary text-decoration-none edit-link">Edit</a>

            <form action="/reviews/delete/<%= review.reviewId %>" method="POST" style="display:inline;">
              <button type="submit" class="btn btn-link p-0 ms-2 text-danger text-decoration-none delete-link" onclick="return confirm('Are you sure you want to delete this review?');">Delete</button>
            </form>
          <% } %>
        </li>
      <% }) %>
    </ul>
  <% } else { %>
    <p>No reviews yet.</p>
  <% } %>
</div>
