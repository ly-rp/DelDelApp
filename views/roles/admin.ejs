<!--Self explanatory.-->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Recipe App</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container-fluid">
        <!-- Header Section -->
        <header class="d-flex justify-content-between align-items-center mt-5">
            <h1 class="text-primary">Recipe Admin Dashboard</h1>
            <p>Welcome, <%= user.username %> (<%= user.role %>)</p>
            <a href="/logout" class="btn btn-danger">Logout</a>
        </header>

        <!-- Navigation Section -->
        <nav class="nav nav-pills mt-4">
            <a class="nav-link active" href="/admin/recipes">All Recipes</a>
            <a class="nav-link" href="/admin/add">Add Recipe</a>
            <a class="nav-link" href="/admin/users">Manage Users</a>
        </nav>

        <!-- Recipes Management Section -->
        <div class="mt-4">
            <h2>Manage Recipes</h2>
            <p>Below is a list of all recipes. You can edit or delete them as needed.</p>

            <!-- Recipe Table -->
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Recipe Name</th>
                        <th scope="col">Category</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <% recipes.forEach(function(recipe, index) { %>
                        <tr>
                            <th scope="row"><%= index + 1 %></th>
                            <td><%= recipe.name %></td>
                            <td><%= recipe.category %></td>
                            <td>
                                <a href="/admin/edit/<%= recipe.id %>" class="btn btn-warning btn-sm">Edit</a>
                                <a href="/admin/delete/<%= recipe.id %>" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this recipe?')">Delete</a>
                            </td>
                        </tr>
                    <% }); %>
                </tbody>
            </table>
        </div>

        <!-- Footer Section -->
        <footer class="mt-5">
            <p>&copy; DelDelApp.</p>
        </footer>
    </div>

    <!-- Bootstrap JS and Dependencies -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.1/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
