<!--LOGIN PAGE-->
<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/customStyling.css" />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Login - DelDel</title>
  <style>
    .toggle-password {
      position: absolute;
      top: 50%;
      right: 1rem;
      transform: translateY(-50%);
      cursor: pointer;
      z-index: 2;
    }
  </style>
</head>
<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <h1 class="text-center mb-4">Login to Delectable Delights</h1>

    <!-- Show Errors -->
    <% if (errors && errors.length > 0) { %>
      <div class="alert alert-danger w-50 mx-auto">
        <ul class="mb-0">
          <% errors.forEach(error => { %>
            <li><%= error %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Show Success Messages -->
    <% if (messages && messages.length > 0) { %>
      <div class="alert alert-success">
        <ul class="mb-0">
          <% messages.forEach(msg => { %>
            <li><%= msg %></li>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Login Form -->
    <form action="/login" method="POST" class="w-50 mx-auto">
      <!-- Email Input -->
      <div class="mb-3">
        <label for="email" class="form-label">Email:</label>
        <input type="email" name="email" id="email" class="form-control" required />
      </div>

      <!-- Password Input with Eye Icon -->
      <div class="mb-3 position-relative">
        <label for="password" class="form-label">Password:</label>
        <input type="password" name="password" id="password" class="form-control pe-5" required />
        <span class="toggle-password" onclick="togglePasswordVisibility()">üëÅÔ∏è</span>
      </div>

      <!-- Submit Button -->
      <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>

    <!-- Forgot Password Link -->
    <div class="text-center mt-3">
      <a href="/forgot-password" class="text-decoration-none">Forgot Password?</a>
    </div>

    <!-- Register and Guest Links -->
    <div class="text-center mt-4">
      <p>Don‚Äôt have an account? <a href="/register">Register here</a></p>
      <p>Or <a href="/guest">Continue as Guest</a></p>
    </div>
  </div>

  <script>
    function togglePasswordVisibility() {
      const passwordInput = document.getElementById('password');
      const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
      passwordInput.setAttribute('type', type);
    }
  </script>
</body>
</html>
