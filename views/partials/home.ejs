<!-- Food Categories -->
<div class="container my-5" style="text-align: center;">
  <h1><b>Food Categories</b></h1>

  <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 28px; margin-top: 20px;">
    <% categories.forEach(category=> { %>
      <div style="text-align: center; width: 200px;">
        <img src="<%= category.image %>" class="rounded-circle" alt="<%= category.name %>"
          style="width: 200px; height: 200px; object-fit: cover;">
        <p>
          <a href="/<%= category.name.toLowerCase().replace(/\s/g, '') %>List"> <!--This from GPT, cuz it will show different route for side dishes cuz theres a space inbetween-->
            <b>
              <%= category.name %>
            </b>
          </a>
        </p>
      </div>
      <% }) %>
  </div>
</div>

<div class="container mt-4">
  <div class="row">
    <% recipes.forEach(recipe=> { %>
      <div class="col-md-3 mb-4">
        <div class="card"
          style="background-color: #fffaec; border-radius: 15px; box-shadow: 0 4px 8px rgba(0,0,0,0.1); max-width: 1000px;">
          <a href="/recipe/<%= recipe.recipeId %>">
            <img src="/images/recipeImages/<%= recipe.recipeImage %>" class="card-img-top"
              alt="<%= recipe.recipeTitle %>">
          </a>
          <div class="card-body">
            <div class="d-flex justify-content-between">
              <h5 class="card-title" style="color: #801408">
                <a href="/recipe/<%= recipe.recipeId %>" style="text-decoration: none; color: inherit;">
                  <%= recipe.recipeTitle %>
                </a>
              </h5>
            </div>
            <div class="d-flex gap-2 mt-2">
              <% if (!user || user.role==='guest' ) { %>
                <!-- Guests or no user: Review + heart linking to register -->
                <a href="/review/<%= recipe.recipeId %>" class="btn btn-yellow2 btn-sm">Review</a>
                <a href="/login" class="btn btn-pink2 btn-sm" title="Login to Favourite">❤️</a>

                <% } else if (user.role==='admin' ) { %>
                  <!-- Admin: Review, Edit, Delete -->
                  <a href="/review/<%= recipe.recipeId %>" class="btn btn-yellow2 btn-sm">Review</a>
                  <a href="/edit/<%= recipe.recipeId %>" class="btn btn-warning btn-sm">Edit</a>
                  <form action="/delete/<%= recipe.recipeId %>" method="POST" style="display:inline;">
                    <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                  </form>

                  <% } else if (user.role==='user' ) { %>
                    <!-- Logged-in user (role != guest or admin) -->
                    <a href="/review/<%= recipe.recipeId %>" class="btn btn-yellow2 btn-sm">Review</a>
                    <a href="/favourites/<%= recipe.recipeId %>" class="btn btn-pink2 btn-sm">❤️</a>

                    <% if (recipe.createdBy===user.id) { %>
                      <a href="/edit/<%= recipe.recipeId %>" class="btn btn-warning btn-sm">Edit</a>
                      <form action="/delete/<%= recipe.recipeId %>" method="POST" style="display:inline;">
                        <button class="btn btn-danger btn-sm" onclick="return confirm('Are you sure?')">Delete</button>
                      </form>
                      <% } %>
                        <% } %>
            </div>
          </div>
        </div>
      </div>
      <% }) %>
  </div>
</div>