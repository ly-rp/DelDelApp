<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Your Favourites</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="/css/customStyling.css" />
</head>
<body>
    <!-- Navigation Bar -->
    <%- include('partials/navbar', { user: user }) %>

    <div class="container mt-4">
        <h1 class="my-3">Your Favourites</h1>

        <div class="row">
            <% if (recipes.length > 0) { %>
                <% recipes.forEach(recipe => { %>
                    <div class="col-md-3 mb-4 d-flex align-items-stretch">
                        <div class="card w-100">
                            <img src="/images/recipeImages/<%= recipe.recipeImage %>" class="card-img-top" alt="Recipe Image" />
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title"><%= recipe.recipeTitle %></h5>
                                <div class="mt-auto d-flex justify-content-between align-items-center">
                                    <a href="/recipe/<%= recipe.recipeId %>" class="btn btn-orange1">View Recipe</a>

                                    <form action="/favourites/remove/<%= recipe.recipeId %>" method="POST" style="margin: 0;">
                                        <button 
                                            type="submit" 
                                            class="btn btn-danger btn-sm" 
                                            onclick="return confirm('Remove this recipe from your favourites?');"
                                        >
                                            Remove ❤️
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <p>You have no favourites yet.</p>
            <% } %>
        </div>

        <a href="/user" class="btn btn-red1 my-3">Back to Home</a>
    </div>
</body>
</html>
