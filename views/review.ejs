<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/customStyling.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Recipe Review</title>

  <style>
    .star-rating {
      direction: rtl;
      display: inline-flex;
      font-size: 2rem;
    }
    .star-rating input[type="radio"] {
      display: none;
    }
    .star-rating label {
      color: #ccc;
      cursor: pointer;
      transition: color 0.2s;
    }
    .star-rating input[type="radio"]:checked ~ label {
      color: gold;
    }
    .star-rating label:hover,
    .star-rating label:hover ~ label {
      color: gold;
    }
  </style>
</head>

<body>
  <%- include('partials/navbar') %>

  <div class="container mt-4">
    <h1>Review Details</h1>

    <p><strong>Title:</strong> <%= review.title %></p>
    <p><strong>Content:</strong> <%= review.content %></p>
    <p><strong>Rating:</strong> <%= review.rating %>/5</p>

    <% if (user) { %>
      <p>Logged in as: <%= user.username %></p>
    <% } else { %>
      <p>You are viewing this as a guest.</p>
    <% } %>
  </div>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Leave a Review</h2>

    <% if (!user) { %>
      <div class="alert alert-warning mt-3">
        You must <a href="/register">register</a> or <a href="/login">log in</a> to leave a review.
      </div>
    <% } else { %>
      <form action="/submitReview" method="POST">
        <div class="mb-4">
          <h5>Rating:</h5>
          <div class="star-rating">
            <input type="radio" id="star5" name="rating" value="5" />
            <label for="star5">★</label>
            <input type="radio" id="star4" name="rating" value="4" />
            <label for="star4">★</label>
            <input type="radio" id="star3" name="rating" value="3" />
            <label for="star3">★</label>
            <input type="radio" id="star2" name="rating" value="2" />
            <label for="star2">★</label>
            <input type="radio" id="star1" name="rating" value="1" />
            <label for="star1">★</label>
          </div>
        </div>

        <div class="mb-3">
          <h5>Comments:</h5>
          <textarea class="form-control" name="comment" rows="5" placeholder="Write your thoughts here..."></textarea>
        </div>

        <button type="submit" class="btn btn-primary">Submit Review</button>
      </form>
    <% } %>
  </div>

  <hr class="my-5" />

  <div class="container">
    <h3>All Reviews</h3>
    <% if (reviews && reviews.length > 0) { %>
      <ul class="list-group">
        <% reviews.forEach(function(r) { %>
          <li class="list-group-item">
            <strong><%= r.username %></strong> rated it <strong><%= r.rating %>/5</strong>
            <p><%= r.comment %></p>
            <% if (user && user.role === 'admin') { %>
              <a href="/reviews/<%= r._id %>/edit" class="btn btn-sm btn-secondary">Edit</a>
            <% } %>
          </li>
        <% }) %>
      </ul>
    <% } else { %>
      <p>No reviews yet.</p>
    <% } %>
  </div>

</body>
</html>
