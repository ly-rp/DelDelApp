<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Recipe Review</title>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/customStyling.css">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

  <style>
    .star-rating {
      direction: rtl;
      display: inline-flex;
      font-size: 2rem;
    }
    .star-rating input[type="radio"] {
      display: none;
    }
    .star-rating label {
      color: #ccc;
      cursor: pointer;
      transition: color 0.2s;
    }
    .star-rating input[type="radio"]:checked ~ label {
      color: gold;
    }
    .star-rating label:hover,
    .star-rating label:hover ~ label {
      color: gold;
    }
  </style>
</head>



<body>
  <%- include('partials/navbar') %>

  <div class="container mt-5">
    <% if (review) { %>
      <h1>Review Details</h1>
      <p><strong>Title:</strong> <%= review.title %></p>
      <p><strong>Content:</strong> <%= review.content %></p>
      <p><strong>Rating:</strong> <%= review.rating %>/5</p>
    <% } else { %>
      <h1>Reviews for <%= recipeTitle %></h1>
    <% } %>

    <% if (user) { %>
      <p>Logged in as: <%= user.username %></p>
    <% } else { %>
      <p>You are viewing this as a guest.</p>
    <% } %>
  </div>

  <div class="container mt-5">
    <h2 class="text-center mb-4">Recipe Review</h2>

    <% if (user && user.role !== 'guest') { %>
      <form action="/reviews/add" method="POST">
        <input type="hidden" name="recipeId" value="<%= recipeId %>">

        <!-- Rating -->
        <div class="mb-4">
          <h5>Rating:</h5>
          <div class="star-rating">
            <% for (let i = 5; i >= 1; i--) { %>
              <input type="radio" id="star<%= i %>" name="rating" value="<%= i %>" />
              <label for="star<%= i %>">â˜…</label>
            <% } %>
          </div>
        </div>

        <!-- Comments -->
        <div class="mb-3">
          <h5>Comments:</h5>
          <textarea class="form-control" name="comment" rows="5" placeholder="Write your thoughts here..." required></textarea>
        </div>

        <!-- Submit -->
        <button type="submit" class="btn btn-primary">Submit Review</button>
      </form>
    <% } else { %>
      <p class="text-muted">You must be logged in to leave a review.</p>
    <% } %>
  </div>

  <div class="container mt-5">
    <hr>
    <h3 class="mb-3">Past Reviews</h3>

    <% if (reviews.length === 0) { %>
      <p>No reviews yet. Be the first to write one!</p>
    <% } else { %>
      <ul class="list-group">
        <% reviews.forEach(r => { %>
          <li class="list-group-item">
            <strong><%= r.username %></strong> - <%= r.rating %>/5
            <br>
            <%= r.comment %>
            <br>
            <small class="text-muted">
              <% if (r.created_at && r.created_at.toLocaleString) { %>
                <%= r.created_at.toLocaleString() %>
              <% } else if (r.created_at) { %>
                <%= r.created_at %>
              <% } %>
            </small>
          </li>
        <% }) %>
      </ul>
    <% } %>
  </div>
</body>
</html>