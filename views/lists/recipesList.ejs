<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Recipe List</title>
</head>

<body>
  <nav class="navbar navbar-expand-sm bg-dark navbar-dark">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">DelDel Recipe App</a>
      <div class="collapse navbar-collapse">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/addRecipe">Add New Recipe</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container">
    <br>
    <div class="text-center"><h2>All Recipes</h2></div>
    <br>

    <table class="table table-hover text-center">
      <thead>
        <tr>
          <th width="150">Recipe Name</th>
          <th width="200">Image</th>
          <th>Description</th>
          <th width="75">Edit</th>
          <th width="75">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < recipes.length; i++) { %>
          <tr>
            <td>
              <a href="/recipe/<%= recipes[i].recipeId %>">
                <%= recipes[i].name %></a>
            </td>
            <td>
              <img src="/images/<%= recipes[i].image %>" width="100">
            </td>
            <td><%= recipes[i].description %></td>
            <td>
              <a href="/editRecipe/<%= recipes[i].recipeId %>">Edit</a>
            </td>
            <td>
              <a href="/deleterecipe/<%= recipes[i].recipeId %>" onclick="return confirm('Are you sure you want to delete this recipe?')">
              Delete</a>
            </td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
